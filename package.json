{
  "name": "convconv",
  "version": "0.1.1",
  "description": "Naming Conventions Converter",
  "main": "dist/convconv.js",
  "types": "dist/convconv.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "jest",
    "test:clean": "npm run clean && npm run test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "prepublishOnly": "npm run test:clean && npm run build:clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thekhanj/convconv.git"
  },
  "author": "Pooyan Khanjankhani <pooyankhan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thekhanj/convconv/issues"
  },
  "keywords": [
    "naming-convention",
    "naming-conventions"
  ],
  "files": [
    "dist/*.d.ts",
    "dist/*.js"
  ],
  "homepage": "https://github.com/thekhanj/convconv#readme",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
